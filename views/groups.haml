%html
  %head
    %title Groups
  %body
    -if @groups.empty?
      %h1 You do not have any groups
      %a{:href => "/addGroup"} Add a Group
    -@groups.each do |group|
      %label Name: #{group.name}
      %br
      %label Type: #{group.type}
      %br
      %a{:href => "/group&groupId=#{group.id}"} View
      %a{:href => "/deleteGroup&groupId=#{group.id}"} Delete
      %br
      %br
