%html
  %head
    %link{:rel => "stylesheet", :type => "text/css", :href => "stylesheet.css"}
    %title Caffeine-Sleep: Create Product
  %body
    .header-nav
      = renderPartial "nav_after_login"
    #content-frame
      #content
        %form{:name => "newProduct", :action => "/addProduct", :method => "post"}
          %fieldset
            %legend Product Information
            .form
              .form-row
                .form-label
                  %label{:rel => "name"} Name
                .form-input
                  %input{:type => "text", :name => "name"} 
              .form-row
                .form-label
                  %label{:rel => "type"} Type
                .form-input
                  %input{:type => "text", :name => "type"}
              .form-row
                .form-label
                  %label{:rel => "mg"} Amount
                .form-input
                  %input{:type => "text", :name => "mg"}
          %input{:type => "submit", :value => "Add Product"}
          %span
            = @error
