%html
  %head
    %link{:rel => "stylesheet", :type => "text/css", :href => "stylesheet.css"}
    %title Caffeine-Sleep: Products
  %body
  .header-nav
    = renderPartial "nav_after_login"
  #content-frame
    #content
      - if @products.empty?
        %h1 You do not have any products
        %a{:href => "/addProduct"} Add a Product
      - @products.each do |product|
        %label Name: #{product.name}
        %br
        %label Type: #{product.type}
        %br
        %label Amount: #{product.mg}
        %br
        %a{:href => "/product#{product.id}"} View 
        %a{:href => "/deleteProduct#{product.id}"} Delete 
        %br
        %br
