%html
  %head
    %link{:rel => "stylesheet", :type => "text/css", :href => "stylesheet.css"}
    %title Caffeine-Sleep: Log Productivity
  %body
    .header-nav
      = renderPartial "nav_after_login"
    #content-frame
      #content
        %form{:name => "productivity", :action => "/logproductivity", :method => "post"}
          %fieldset
            %legend Productivity
            .form
              .form-row
                .form-label
                  %label{:rel => "level"} level
                .form-input
                  %input{:type => "text", :name => "level"}
          %input{:type => "submit", :value => "Log Productivity"}
        %span
          = @error
