  %body
    .header-nav
      = renderPartial "nav"
    %h1 Product Infomation
    %label Name: #{@product.name}
    %br
    %label Type: #{@product.type}
    %br
    %label Amount: #{@product.mg}
    %br
    %a{:href => "/deleteProduct#{@product.id}"} Delete
